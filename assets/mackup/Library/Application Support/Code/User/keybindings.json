[
  {
    "key": "ctrl+d",
    "when": "editorTextFocus && neovim.mode != insert",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "vscode-neovim.send",
          "args": "<C-d>",
        },
        {
          "command": "vscode-neovim.send",
          "args": ":sleep 20m<CR>",
        },
        {
          "command": "vscode-neovim.send",
          "args": "zz",
        },
      ]
    }
  },
  {
    "key": "ctrl+u",
    "when": "editorTextFocus && neovim.mode != insert",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "vscode-neovim.send",
          "args": "<C-u>",
        },
        {
          "command": "vscode-neovim.send",
          "args": ":sleep 20m<CR>",
        },
        {
          "command": "vscode-neovim.send",
          "args": "zz",
        },
      ]
    }
  },
  {
    "key": "n",
    "when": "editorTextFocus && neovim.mode != insert",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "vscode-neovim.send",
          "args": "n",
        },
        {
          "command": "vscode-neovim.send",
          "args": ":sleep 20m<CR>",
        },
        {
          "command": "vscode-neovim.send",
          "args": "zz",
        },
      ]
    }
  },
  {
    "key": "shift+n",
    "when": "editorTextFocus && neovim.mode != insert",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "vscode-neovim.send",
          "args": "N",
        },
        {
          "command": "vscode-neovim.send",
          "args": ":sleep 20m<CR>",
        },
        {
          "command": "vscode-neovim.send",
          "args": "zz",
        },
      ]
    }
  },
  {
    "key": "shift+cmd+c",
    "command": "-workbench.action.terminal.openNativeConsole",
    "when": "!terminalFocus"
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+cmd+h",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "ctrl+cmd+j",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+cmd+j",
    "command": "workbench.action.terminal.focus",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+cmd+l",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "space",
    "command": "vspacecode.space",
    "when": "editorTextFocus && neovim.mode == normal"
  }
]
