[
  {
    "label": "live_grep",
    "command": "selection=$(tv text); [ -n \"$selection\" ] && zed \"$selection\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "file_finder",
    "command": "cwd=$(pwd -P); [ \"$cwd\" = \"/\" ] && exit 0; selection=$(tv hidden-files-zed); [ -n \"$selection\" ] && zed \"$selection\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "file_finder_modified",
    "command": "cwd=$(pwd -P); [ \"$cwd\" = \"/\" ] && exit 0; selection=$(tv modified-files); [ -n \"$selection\" ] && zed \"$selection\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "project_finder",
    "command": "selection=$(tv git-repos); [ -n \"$selection\" ] && zed --add \"$selection\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "yazi",
    "command": "yazi",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    },
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    }
  },
  {
    "label": "yazi_with_file",
    "command": "yazi $ZED_FILE",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    },
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    }
  },
  {
    "label": "lazygit",
    "command": "~/.local/share/mise/shims/lazygit",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "lazydocker",
    "command": "~/.local/share/mise/shims/lazydocker",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "gitu",
    "command": "gitu",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "agents",
    "command": "agents.bash",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "amp",
    "command": "current_dir=$(basename \"$(pwd)\"); tmux attach-session -t \"$current_dir\" 2>/dev/null || tmux new-session -s \"$current_dir\" 'tmux new-window -n amp \"zsh -i -c \\\"amp\\\"\" && tmux select-window -t amp'",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "zellij",
    "command": "repo_path=$(pwd); if [[ \"$repo_path\" != \"$HOME\" ]] && git rev-parse --is-inside-work-tree >/dev/null 2>&1 && [[ \"$(git rev-parse --show-toplevel)\" == \"$repo_path\" ]]; then repo_name=repo-t-$(basename \"${repo_path}\"); zellij attach \"${repo_name}\" 2>/dev/null || zellij --session \"${repo_name}\"; fi",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "sh",
        "args": ["--noediting", "--norc", "--noprofile"]
      }
    }
  },
  {
    "label": "run",
    "command": "runner.bash",
    "args": ["$ZED_FILE"],
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  }
]
