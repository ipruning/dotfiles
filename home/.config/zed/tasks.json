  {
    "label": "zellij",
    "command": "repo_path=$(pwd -P); if [[ \"$repo_path\" != \"$HOME\" ]] && git rev-parse --is-inside-work-tree >/dev/null 2>&1 && [[ \"$(git rev-parse --show-toplevel)\" == \"$repo_path\" ]]; then repo_name=zed-$(basename \"$repo_path\"); zellij attach --create \"$repo_name\"; fi",
    "hide": "always",
    "show_summary": false,
    "show_command": false,
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "shell": {
      "with_arguments": {
        "program": "/bin/bash",
        "args": ["--noediting", "--norc", "--noprofile"],
      },
    },
  },
  {
    "label": "run",
    "command": "runner.bash",
    "args": ["$ZED_FILE"],
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
  },
