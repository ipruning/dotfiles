# cmd+<triple-mouse-click> == copy command output

# command = /opt/homebrew/bin/fish --login --interactive

clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true
copy-on-select = clipboard
cursor-style = block
cursor-style-blink = false
macos-titlebar-style = hidden
shell-integration-features = no-cursor
unfocused-split-opacity = 1
window-height = 40
window-width = 140

window-padding-x = 8, 8
window-padding-y = 8, 8

font-family = "MonoLisa"
font-size = 13
font-style = Medium

font-family = "Maple Mono NF CN"

theme = catppuccin-mocha

macos-option-as-alt = true

confirm-close-surface = false

keybind = cmd+j=text: jump-to-session\x0a
keybind = cmd+shift+j=text: jump-to-repo\x0a

keybind = cmd+u=scroll_page_up
keybind = cmd+d=scroll_page_down
keybind = cmd+s=write_screen_file:open
keybind = cmd+shift+s=write_screen_file:paste

keybind = cmd+left=goto_split:left
keybind = cmd+down=goto_split:bottom
keybind = cmd+up=goto_split:top
keybind = cmd+right=goto_split:right

keybind = cmd+shift+left=new_split:left
keybind = cmd+shift+down=new_split:down
keybind = cmd+shift+up=new_split:up
keybind = cmd+shift+right=new_split:right

keybind = cmd+n=new_split:down
keybind = cmd+n=new_window
keybind = cmd+shift+n=new_window
keybind = cmd+t=ignore
