layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        children
    }

    tab name="editor" focus=true {
        pane {
            command "zsh"
            args "-i" "-c" "hx ."
        }
    }

    tab name="code-agent" {
        pane {
            command "zsh"
            args "-i" "-c" "claude"
        }
    }

    tab name="monitor" {
        pane
    }

    tab name="cli" {
        pane
    }
}
