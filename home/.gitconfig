[core]
excludesfile = ~/.gitignore
ignorecase = false
pager = delta

[interactive]
diffFilter = delta --color-only --features=interactive-catppuccin-mocha

[init]
defaultBranch = main

[commit]
verbose = true
template = ~/.gitcommit

[branch "main"]
rebase = true

[branch "master"]
rebase = true

[push]
default = current # https://git-scm.com/docs/git-config#Documentation/git-config.txt-pushdefault
autoSetupRemote = true

[rebase]
autoStash = true

[fetch]
recurseSubmodules = true # still requires: git clone --recursive ...

[pull]
rebase = true

[diff]
colorMoved = default
algorithm = histogram
indentHeuristic = true
compactionHeuristic = true

[delta]
navigate = true
features = catppuccin-mocha

[delta "catppuccin-mocha"]
blame-palette = "#1e1e2e #181825 #11111b #313244 #45475a"
commit-decoration-style = box ul
dark = true
file-decoration-style = "#cdd6f4"
file-style = "#cdd6f4"
hunk-header-decoration-style = box ul
hunk-header-file-style = bold
hunk-header-line-number-style = bold "#a6adc8"
hunk-header-style = file line-number syntax
line-numbers-left-style = "#6c7086"
line-numbers-minus-style = bold "#f38ba8"
line-numbers-plus-style = bold "#a6e3a1"
line-numbers-right-style = "#6c7086"
line-numbers-zero-style = "#6c7086"
minus-emph-style = bold syntax "#53394c"
minus-style = syntax "#34293a"
plus-emph-style = bold syntax "#404f4a"
plus-style = syntax "#2c3239"
map-styles = \
  bold purple = "#494060", \
  bold blue = "#384361", \
  bold cyan = "#384d5d", \
  bold yellow = "#544f4e" >syntax >syntax >syntax >syntax
syntax-theme = catppuccin-mocha

[delta "interactive-catppuccin-mocha"]
features = catppuccin-mocha
color-only = true

[merge]
conflictstyle = diff3

[rerere]
enabled = true

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process

[gc]
reflogExpire = 200
reflogExpireUnreachable = 90

[protocol]
version = 2 # https://blog.github.com/changelog/2018-11-08-git-protocol-v2-support/

[log]
date = iso

[gitbutler]
aiOpenAIKeyOption = bringYourOwn
aiOpenAIModelName = gpt-5-mini
aiModelProvider = openai

