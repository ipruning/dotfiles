#!/usr/bin/env bash
set -e
set -u
set -o pipefail

if command -v pbcopy >/dev/null 2>&1; then
  exec pbcopy
elif command -v xclip >/dev/null 2>&1; then
  exec xclip -selection clipboard
elif command -v putclip >/dev/null 2>&1; then
  exec putclip
else
  rm -f /tmp/clipboard 2> /dev/null
  if [ $# -eq 0 ]; then
    cat > /tmp/clipboard
  else
    cat "$1" > /tmp/clipboard
  fi
fi
